
CXX		= $(LARCV_CXX)
LD              = $(LARCV_CXX)
LDFLAGS         += -Wl,-rpath,$(LARCV_BASEDIR)/lib
FFLAGS          += -Wall
FLDFLAGS        += -lstdc++ -shared 
CXXFLAGS        += -g -O3 -std=c++0x -W -Wall -Wno-deprecated -fPIC -D_CORE_$(shell uname -s)_
SOMAKER         = $(LARCV_CXX)
SOFLAGS         = -g -fPIC -shared

ifeq ($(LARCV_OPENCV),1)
CXXFLAGS += -DUSE_OPENCV
endif
